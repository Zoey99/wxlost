/* pages/index/components/more/index.wxss */

.more {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  left: 280rpx;
  background: #fff;
  animation: left .3s ease both;
}

@keyframes left {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(0);
  }
}

.box {
  /* position: absolute; */
  /* left: 0; */
  /* right: 0; */
  /* top: 100px; */
  /* bottom: 50px; */
  max-height:50%;
  box-sizing: border-box;
}

.box-item {
  padding: 30rpx 28rpx 20rpx;
}
.box-item .search{
  border:1px solid #ddd;
  height:35px;
  padding-left:20px;
  font-size: 12px;
}

.title {
  height: 29px;
  padding: 0 15px;
  font-size: 15px;
  color: #666;
  font-weight: bold;
}

.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item {
  background: #efefef;
  font-size: 14px;
  color: #555555;
  width: 30%;
  margin-left: 5%;
  height: 30px;
  margin-top: 15rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  box-sizing: border-box;
}

.item:nth-of-type(3n+1) {
  margin-left: 0;
}

.item-text {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  text-align: center;
}

.selected {
  color: #fff;
  /* border: #CB4343 1rpx solid; */
  background: #4ccbde;
}

.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  border-top: rgba(0, 0, 0, .1) 1rpx solid;
  display: flex;
  flex-direction: row;
  font-size: 16px;
}

.bottom-item {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.reset {
  color: #292929;
  background:#e1e1e1;
}

.ok {
  color: #fff;
  background:#4ccbde;
}
.selectTimeBox{
  display:flex;
  justify-content: space-around;
  align-items: center;
}
.startTime,.endTime{
 width:50%;
}
.startTime .picker,.endTime .picker{
  height:30px;
  width:100%;
  border:1px solid #ddd;
  text-align: center;
  line-height: 30px;
}

.addressPicker .picker{
  width:100%;
  border:1px solid #ddd;
  height:40px;
  line-height: 40px;
  text-indent: 10px;
  /* content:"\f33f" */
  position: relative;
}
.addressPicker .picker::after{
  position: absolute;
  content:"\25BC";
  width:10px;
  height:10px;
  right:20px;
  top:0px;
}
.resetBtn{
  color:#8ed9de;
}

.modelboxbg{
  position:absolute;
  top:0;
  z-index:10000;
  width:100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
}
.modelbox{
  position:absolute;
  bottom:0;
  z-index:999999;
  width:100%;
  background: #fff;
}
picker-view-column{
  text-align: center;
}
view.model_picker{
  position: relative;
}
.button_model{
  height: 80rpx;
  width: 100%;
  background: #fff;
  position: relative;
  border-bottom: 1px solid #d9d9d9;
}
.button_model text{
    color: #007aff;
    position: absolute;
    background:transparent;
    border: none;
    line-height: 80rpx;
}
.button_model text:first-child{
  left: 32rpx;
}
.button_model text:last-child{
  right: 32rpx;
}