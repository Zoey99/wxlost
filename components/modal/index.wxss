/* components/modal/index.wxss */
@import '/module.wxss';

.modal {
  position: fixed;
  left: 0;
  top:0;
  right: 0;
  bottom: 0;
  z-index: 200;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(0, 0, 0, .1);
  animation: fade-in .3s linear both;
}

.modal-close-box {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
